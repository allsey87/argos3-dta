<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="5" random_seed="12345" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="pipuck">
      <actuators>
        <pipuck_differential_drive implementation="default" />
        <debug implementation="default">
          <interface id="loop_functions" />
          <interface id="draw" />
        </debug>
        <wifi implementation="default" />
      </actuators>
      <sensors>
        <pipuck_ground implementation="default" show_rays="false" />
        <pipuck_differential_drive implementation="default" />
        <pipuck_rangefinders implementation="default" show_rays="false" />
        <wifi implementation="default" show_rays="false" />
      </sensors>
      <params script="@CMAKE_BINARY_DIR@/experiment/pipuck.lua" />
    </lua_controller>

  </controllers>

  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="@CMAKE_BINARY_DIR@/loop_functions/libdta_abstract_loop_functions"
                  label="dta_abstract_loop_functions"
                  layout="25,25" />

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="3, 3, 1" center="1.5, 1.5, 0">
    <!-- update the floor using the loop functions -->
    <floor id="floor" source="loop_functions" pixels_per_meter="100" />
    <!-- add the arena walls -->
    <box id="north" size="0.025,2.975,0.05" movable="false">
      <body position="2.9875,1.5125,0"  orientation="0,0,0" />
    </box>
    <box id="east" size="2.975,0.025,0.05" movable="false">
      <body position="1.5125,0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="south" size="0.025,2.975,0.05" movable="false">
      <body position="0.0125,1.4875,0"  orientation="0,0,0" />
    </box>
    <box id="west" size="2.975,0.025,0.05" movable="false">
      <body position="1.4875,2.9875,0"  orientation="0,0,0" />
    </box>
    <!-- distribute robots -->
    <distribute>
      <position method="uniform" min="0.0,0.0,0" max="3,3,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="20" max_trials="50">
        <pipuck id="pipuck">
          <controller config="pipuck"/>
        </pipuck>
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="25" default_friction="10">
      <gravity g="9.8" />
      <floor friction="10" />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <!--directional_led id="directional_leds" index="grid" grid_size="20,20,20"/-->
    <radio id="wifi" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization  * -->
  <!-- ****************** -->

  <visualization>
    <qt-opengl lua_editor="false">
      <camera>
        <placement idx="0" position="1.5,1.5,5" look_at="1.5,1.5,0.125" up="1,0,0" lens_focal_length="40" />
        <placement idx="1" position=" 1.5,-4.5,2" look_at="1.5,1.5,0.5" lens_focal_length="57" />
        <placement idx="2" position=" 8.5,-5.5,5" look_at="1.5,1.5,0.5" lens_focal_length="92" />
        <placement idx="3" position=" 7.5, 1.5,2" look_at="1.5,1.5,0.5" lens_focal_length="57" />
        <placement idx="4" position=" 8.5, 8.5,5" look_at="1.5,1.5,0.5" lens_focal_length="92" />
        <placement idx="5" position=" 1.5, 7.5,2" look_at="1.5,1.5,0.5" lens_focal_length="57" />
        <placement idx="6" position="-5.5, 8.5,5" look_at="1.5,1.5,0.5" lens_focal_length="92" />
        <placement idx="7" position="-4.5, 1.5,2" look_at="1.5,1.5,0.5" lens_focal_length="57" />
        <placement idx="8" position="-5.5,-5.5,5" look_at="1.5,1.5,0.5" lens_focal_length="92" />
      </camera>
    </qt-opengl>
  </visualization>


</argos-configuration>
