<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="5" random_seed="12345" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="builderbot">
      <actuators/>
      <sensors/>
      <params />
    </lua_controller>

    <lua_controller id="block">
      <actuators/>
      <sensors/>
      <params />
    </lua_controller>
  </controllers>
  <!-- ****************** -->
  <!-- * Loop functions * -->
  <!-- ****************** -->
  <loop_functions library="@CMAKE_BINARY_DIR@/loop_functions/libdta_visualization_loop_functions"
                  label="dta_visualization_loop_functions"
                  construction_site_min_corner="-0.5,-0.5"
                  construction_site_max_corner="0.5,0.5"
                  blocks_in_foraging_area="10" />

  <!-- *********************** -->
  <!-- * Arena configuration * -->
  <!-- *********************** -->
  <arena size="3, 3, 1" center="0, 0, 0">
    <floor id="floor" source="loop_functions" pixels_per_meter="200" />
    <!-- add the arena walls -->
    <box id="north" size="0.025,2.975,0.05" movable="false">
      <body position="1.4875,0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="east" size="2.975,0.025,0.05" movable="false">
      <body position="0.0125,-1.4875,0"  orientation="0,0,0" />
    </box>
    <box id="south" size="0.025,2.975,0.05" movable="false">
      <body position="-1.4875,-0.0125,0"  orientation="0,0,0" />
    </box>
    <box id="west" size="2.975,0.025,0.05" movable="false">
      <body position="-0.0125,1.4875,0"  orientation="0,0,0" />
    </box>
    <!-- add a fixed seed block -->
    <block id="0" init_led_color="green">
      <body position="0,0,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="00" init_led_color="orange">
      <body position="0.055,0,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="01" init_led_color="orange">
      <body position="0.055,0.055,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="02" init_led_color="orange">
      <body position="0,0.055,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="03" init_led_color="orange">
      <body position="-0.055,0.055,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="04" init_led_color="orange">
      <body position="-0.055,0,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="05" init_led_color="orange">
      <body position="-0.055,-0.055,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="06" init_led_color="orange">
      <body position="0,-0.055,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="07" init_led_color="orange">
      <body position="0.055,-0.055,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="08" init_led_color="magenta">
      <body position="0,-0.110,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="09" init_led_color="magenta">
      <body position="0.110,0,0" orientation="0,0,0"/>
      <controller config="block"/>
    </block>


    <block id="1" init_led_color="green">
      <body position="0,0,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="10" init_led_color="orange">
      <body position="0.055,0,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="11" init_led_color="orange">
      <body position="0.055,0.055,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="12" init_led_color="orange">
      <body position="0,0.055,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="13" init_led_color="orange">
      <body position="-0.055,0.055,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="14" init_led_color="orange">
      <body position="-0.055,0,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="15" init_led_color="orange">
      <body position="-0.055,-0.055,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="16" init_led_color="orange">
      <body position="0,-0.055,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>
    <block id="17" init_led_color="orange">
      <body position="0.055,-0.055,0.055" orientation="0,0,0"/>
      <controller config="block"/>
    </block>

    <block id="2" init_led_color="green">
      <body position="0,0,0.110" orientation="0,0,0"/>
      <controller config="block"/>
    </block>

    <!-- distribute robots -->
    <distribute>
      <position method="uniform" min="-1.4,-1.4,0" max="1.4,1.4,0" />
      <orientation method="uniform" min="0,0,0" max="360,0,0" />
      <entity quantity="5" max_trials="50">
        <builderbot id="builderbot">
          <controller config="builderbot"/>
        </builderbot>
      </entity>
    </distribute>
  </arena>

  <!-- ******************* -->
  <!-- * Physics engines * -->
  <!-- ******************* -->
  <physics_engines>
    <dynamics3d id="dyn3d" iterations="1000" default_friction="10">
      <gravity g="9.8" />
      <floor friction="10" />
    </dynamics3d>
  </physics_engines>

  <!-- ********* -->
  <!-- * Media * -->
  <!-- ********* -->
  <media>
    <directional_led id="directional_leds" index="grid" grid_size="20,20,20"/>
    <tag id="tags" index="grid" grid_size="20,20,20" />
    <radio id="nfc" index="grid" grid_size="20,20,20" />
    <radio id="wifi" index="grid" grid_size="20,20,20" />
  </media>

  <!-- ****************** -->
  <!-- * Visualization * -->
  <!-- ****************** -->

  <visualization>
    <qt-opengl lua_editor="false" show_boundary="false">
      <!--user_functions label="srocs_qtopengl_user_functions" /-->
      <camera>
        <placement idx="0" position=" 2.5,-2.5,1" look_at="0,0,0.05" lens_focal_length="92" />
        <placement idx="1" position=" 2.5, 0,  1" look_at="0,0,0.05" lens_focal_length="78" />
        <placement idx="2" position=" 2.5, 2.5,1" look_at="0,0,0.05" lens_focal_length="92" />
        <placement idx="3" position=" 0,   2.5,1" look_at="0,0,0.05" lens_focal_length="78" />
        <placement idx="4" position="-2.5, 2.5,1" look_at="0,0,0.05" lens_focal_length="92" />
        <placement idx="5" position="-2.5, 0,  1" look_at="0,0,0.05" lens_focal_length="78" />
        <placement idx="6" position="-2.5,-2.5,1" look_at="0,0,0.05" lens_focal_length="92" />
        <placement idx="7" position=" 0,  -2.5,1" look_at="0,0,0.05" lens_focal_length="78" />
        <placement idx="8" position="0,0,0.5" look_at="0.0,0.0,0.125" up="1,0,0" lens_focal_length="40" />
      </camera>
    </qt-opengl>
  </visualization>


</argos-configuration>
